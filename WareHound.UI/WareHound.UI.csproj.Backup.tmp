<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
    <Platforms>x64</Platforms>
    <RuntimeIdentifier>win-x64</RuntimeIdentifier>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Prism.DryIoc" Version="8.1.97" />
    <PackageReference Include="Prism.Wpf" Version="8.1.97" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\WareHound.Sniffer\WareHound.Sniffer.vcxproj" />
  </ItemGroup>

  <!-- Determine solution directory (works when building standalone or via solution) -->
  <PropertyGroup>
    <WareHoundSolutionDir Condition="'$(SolutionDir)' != '' AND !$(SolutionDir.Contains('*Undefined*'))">$(SolutionDir)</WareHoundSolutionDir>
    <WareHoundSolutionDir Condition="'$(WareHoundSolutionDir)' == ''">$(ProjectDir)..\</WareHoundSolutionDir>
  </PropertyGroup>

  <!-- Build the C++ Sniffer DLL before building the UI -->
  <Target Name="BuildSnifferDll" BeforeTargets="Build">
    <Exec Command="msbuild &quot;$(WareHoundSolutionDir)WareHound.Sniffer\WareHound.Sniffer.vcxproj&quot; /p:Configuration=$(Configuration) /p:Platform=x64 /p:SolutionDir=&quot;$(WareHoundSolutionDir)&quot;" />
  </Target>

  <Target Name="CopyNativeDll" AfterTargets="Build">
    <Copy SourceFiles="$(WareHoundSolutionDir)bin\$(Configuration)\WareHound.Sniffer.dll" DestinationFolder="$(OutputPath)" SkipUnchangedFiles="true" />
  </Target>

</Project>
